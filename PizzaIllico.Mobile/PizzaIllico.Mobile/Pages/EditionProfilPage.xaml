<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaIllico.Mobile.Pages.EditionProfilPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Profil" FontSize="Large" TextColor="#156A31" HorizontalTextAlignment="Center"/>
            <Label Text="Email :"/>
            <Entry Text="{Binding Email}" IsReadOnly="True"/>

            <Label Text="Nom :"/>
            <Entry Text="{Binding Nom}"/>

            <Label Text="Prénom :"/>
            <Entry Text="{Binding Prenom}"/>

            <Label Text="Téléphone :"/>
            <Entry Text="{Binding Telephone}"/>

            <Button Command="{Binding EditerProfil}" Text="Editer le profil" BackgroundColor="#156A31" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>