<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaIllico.Mobile.Pages.ProfilPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Profil" FontSize="Large" TextColor="#156A31" HorizontalTextAlignment="Center" />

            <Button Command="{Binding goEditerProfil}" Text="Vos informations"  BackgroundColor="#156A31" TextColor="White" Margin="0,0,0,20"/>
            <Button Command="{Binding goEditerMdp}" Text="Editer Mot de Passe"  BackgroundColor="#156A31" TextColor="White" Margin="0,0,0,20"/>
            <Button Command="{Binding goAnciennesCommandes}" Text="Voir mes anciennes commandes"  BackgroundColor="#156A31" TextColor="White" Margin="0,0,0,20"/>
            <Button Command="{Binding Deconnexion}" Text="Déconnexion"  BackgroundColor="#156A31" TextColor="White" Margin="0,0,0,20"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>